<!DOCTYPE html>
<html>
	<%- include("./../public/back/header.ejs") %>
		<div class="main-content container floatfix">
			<%- include("./../public/back/sidebar.ejs") %>
			<div class="user-right">
				<%- include("./../public/back/userinfo.ejs") %>
				<div class="user-oparate">
					<nav>
						<ul class="nav-itme-container floatfix">
							<li class="nav-item "><a href="/admin">当前图书</a></li>
							<li class="nav-item nav-item-cur"><a href="/admin/bookadd">增加图书</a></li>
						</ul>
					</nav>
					<form>
						<div class="form-group">
							<label for="">图书名：</label>
							<input type="text" value="" id="bookName" >
						</div>
						<div class="form-group">
							<label for="">厚朴编号：</label>
							<input type="text" value="" id="hopeID">
						</div>
						<div class="form-group">
							<label for="">分类：</label>
							<div class="radio">
							<%for(var i=0,max=bookCate.length;i<max;i++){%>
                            	<label class="radio-inline"><input type="radio" class="" name="bookGroup" value=""><%=bookCate[i]%></label>
                            <%}%>
							</div>
						</div>
						<div class="form-group">
							<label for="">作者：</label>
							<input type="text"  value="" id="bookAuthor">
						</div>
						<div class="form-group">
							<label for="">ISBN：</label>
							<input type="text" id="bookISBN" value="" >
						</div>
						<div class="form-group">
							<label for="">出版社：</label>
							<input type="text" id="bookPress" value="" >
						</div>
						<p class="button-group button-group-2"><button type="button" id="save">确认</button><a class="button" href="javascript:history.go(-1);location=location"  title="返回">返回</a></p>
					</form>
				</div>
			</div>
		</div>
		<footer>
		<%- include("./../public/back/footer.ejs") %>
		<script src="/js/addbook.js"></script>
	</body>
</html>